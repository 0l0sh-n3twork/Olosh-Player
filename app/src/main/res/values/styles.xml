<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="settingsBackground">@color/settingsBackground</item>
        <item name="bottomNavBg">@color/colorPrimaryDark</item>
        <item name="bottomNavItemChecked">@color/AppThemeItem</item>
        <item name="themeButtonBg">@color/defaultButton</item>
        <item name="surpriseText">@string/defaultThemeText</item>
        <item name="themeInfo">@string/themeText1</item>

    </style>

    <style name="EditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item>
