<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <FrameLayout
        android:id="@+id/mainFragmentAH"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/titleBarAH"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="?bottomNavBackground"
            android:weightSum="10">

            <TextView
                android:id="@+id/txtLabelAH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:layout_margin="20dp"
                android:text="Dashboard"
                android:textColor="?colorText"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

            <ImageView
                android:id="@+id/btnSearchAH"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:layout_margin="10dp"
                android:src="@drawable/ic_search"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:layout_margin="10dp"
                app:cardCornerRadius="40dp"
                >

                <ImageView
                    android:id="@+id/imgUserAH"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/zulfikar"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavBarAH"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:cardCornerRadius="10dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?bottomNavBackground"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/btnDashboard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_weight="1"
                android:src="@drawable/ic_dashboard"
                android:background="?bottomNavItemChecked"
                app:tint="?bottomNavItemUnchecked"/>

            <ImageView
                android:id="@+id/btnVideos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_videocam"/>

            <ImageView
                android:id="@+id/btnPlaylist"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_playlist_play"/>

            <ImageView
                android:id="@+id/btnFolder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="10dp"
                android:src="@drawable/ic_baseline_folder"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>